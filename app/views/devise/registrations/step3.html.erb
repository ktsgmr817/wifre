<h2>新規登録3</h2>

<%= form_for(@user, as: :user, url: registration_path(resource_name), method: :post) do |f| %>
  <%= render "devise/shared/error_messages", resource: @user %>

  <div class="field">
    <%= f.label :名前 %><br />
    <%= f.label :姓 %>
    <%= f.text_field :lastname, autofocus: true , placeholder: "ウィフレ" %>
    <%= f.label :名 %>
    <%= f.text_field :firstname, autofocus: true , placeholder: "太郎" %>
  </div>

  <div class="field">
    <%= f.label :ニックネーム %><br />
    <%= f.text_field :nickname, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :生年月日 %><br />
    <%= f.date_select(
          :birth_date,
          use_month_numbers:true,
          start_year: 1930,
          end_year: (Time.now.year - 18),
          default: Date.new(2000,1,1) )
      %>
  </div>

  <div class="field">
    <%= f.label :性別, :男性 %>
    <%= f.radio_button :sex, 0 %>
    <%= f.label :性別, :女性 %>
    <%= f.radio_button :sex, 1 %>
    <%= f.label :性別, :その他 %>
    <%= f.radio_button :sex, 9 %>
  </div>

  <div class="field">
    <%= f.label :学年 %><br />
    <%= f.select :grade, [["1", 1], ["2", 2], ["3", 3], ["4", 4]], :selected=>1  %>年
  </div>

  <div class="field">
    <%= f.label :学部名 %><br />
    <%= f.text_field :faculty, autofocus: true %>学部
  </div>

  <div class="field">
    <%= f.label :学科または専攻・コース名 %><br />
    <%= f.text_field :department, autofocus: true, placeholder: "〇〇学科/〇〇専攻/〇〇コース" %>
  </div>

  <div class="actions">
    <%= f.submit "仮登録メール送信" %>
  </div>
<% end %>
