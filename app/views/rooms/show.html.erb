<%= render 'layouts/header' %>

<div class="container">
  <div class="row">
    <% @entries.each do |e| %>
      <% if e.user.id != current_user.id %>
      <div class="col-xs-3 col-xs-offset-1">
        <%= image_tag e.user.image, class: 'room-show-user-icon' %>
      </div>
      <div class="col-xs-7 col-xs-offset-1">
        <a href="/users/<%= e.user.id %>" class="room-show-nickname" ><%= e.user.nickname%></a>
      </div>
      <% end %>
    <% end %>
  </div>
</div>

<hr class="room-show-hr">

<div class="message-container">
  <% if @messages.present? %>
    <% @messages.each do |m| %>
      <% if m.user.id == current_user.id %>
      <div class="col-xs-8 col-xs-offset-4 current-user-message">
        <span class="message-time"><%= m.created_at.strftime("%-H:%I") %></span>
        <p class="message"><%= m.content %></p>
        <!-- <strong><a href="/users/<%= m.user_id %>"><%= m.user.nickname %></a> -->
      </div>
      <% else %>
      <div class="col-xs-8 partner-message">
        <p class="message"><%= m.content %></p>
        <!-- <strong><a href="/users/<%= m.user_id %>"><%= m.user.nickname %>さん</a> -->
        <span class="message-time"><%= m.created_at.strftime("%-H:%I") %></span>
      </div>
      <% end %>
    <% end %>
  <% else %>
    <h3 class="messages-not-exists">メッセージはまだありません</h3>
  <% end %>
</div>

<div class="message-posting">
  <%= form_for @message do |f| %>
    <%= f.text_field :content, :placeholder => "メッセージを入力" , class: 'message-form-control' %>
    <%= f.hidden_field :room_id, :value => @room.id %>
    <%= button_tag type: :submit, class: 'posting-button' do %>
      <%= image_tag "/assets/posting.png" %>
    <% end %>
  <% end %>
</div>
