<h1 class="users-heading">メッセージ一覧</h1>
<% @anotherEntries.each do |e| %>
  <div class="users-index-item">
    <div class="user-left">
      <%= link_to room_path(e.room.id) do %>
        <img src="">
      <% end %>
    </div>
    <div class="user-right">
      <%= link_to room_path(e.room.id) do %>
        <%= e.user.nickname %>とDMをしよう！<br>
      <% end %>
      <% room = Room.find e.room_id %>
      <% if room.check_read_flag(current_user.id) %>未読あり<% else %><% end %>
      <%= room.messages.order(created_at: :desc).take.try(:content) %><br>
    </div>
  </div>
<% end %>